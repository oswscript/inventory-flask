<!--Head-->
{% extends 'base.html.j2' %}
{% from './_macros/_macro_input_form.html.j2' import render_field %}
{% block title %} {{ title }} {% endblock %}
<!--/end Head-->

<!--Content-->
{% block content %}
   
	<div class="container text-center mt-4">
		<div class="row justify-content-md-center">
			<div class="col-md-auto mx-auto">
				<div class="card" style="width: 45rem;">
					<div class="card-body col-12">
					<h2>User: {{ data.username }}</h2>
						<form method="POST">
							<input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
							<div class="form-group">
								{{ render_field(form.password,class="form-control") }}
							</div>
							<div class="form-group">
								{{ render_field(form.confirm_pass,class="form-control") }}
							</div>
							<button type="submit" class="btn btn-primary">Update</button>
						</form>
						<p class="m-t-sm"><a href="{{ url_for('index_users') }}">Back</a></p>
					</div>
					<div class="col-sm-12">
						<!--errors-->
						{% if form.errors %}
							<ul>
								{% for field in form.errors %}
									{% for error in form.errors[field] %}
										<li class="alert alert-warning fade show text-left" ><strong>{{ error }}</strong></li>
									{% endfor %}
								{% endfor %}
							</ul>
						{% endif %}
						<!--/end errors-->

						<!--flash errors-->
						{{ flash_alerts() }}
						<!--/end flash errors-->
					</div>
				</div>
			</div>
		</div><!-- Page Content -->
	</div><!--/container-->
{% endblock %}
<!--/end Content-->